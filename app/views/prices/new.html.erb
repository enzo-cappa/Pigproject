<h1>New price</h1>

<% form_for @price, :url => {:action => 'create'} do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :value %>
    <%= f.text_field :value %>
  </p>
  <%= f.hidden_field :product_id, :value => @price.product.id %>
  <p>    
    <%= f.submit 'Create' %>    
  </p>
<% end %>

<%= link_to 'Back', :action => 'index', :product => @price.product.id %>
