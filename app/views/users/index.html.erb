<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Type</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.name %></td>
    <td><%=h user.type %></td>
    <td><%= link_to I18n.t('model.show'), user %></td>
    <td><%= link_to I18n.t('model.edit'), edit_user_path(user) %></td>
    <td><%= link_to I18n.t('model.destroy'), user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %>
