<h1>New deposit</h1>

<% form_for(@deposit) do |f| %>
  <%= f.error_messages %>
  <p>
    <%=f.label :amount %><br />
    <%=f.text_field :amount %>
  </p>
  <p>
    <%=f.label :user %> <br/>
  <%= select_tag 'user', options_for_select(@users, :user) %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', deposits_path %>
