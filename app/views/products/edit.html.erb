<h1>Editing product</h1>

<% form_for(@product, :html => {:multipart => true }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :image %><br />
    <%= f.file_field 'image'  %>
  </p>
  <p>
    <%=f.label :price %><br />
    <%=f.text_field :price %>
  </p>
  <p>
    <%=f.label :stock %><br />
    <%=f.text_field :stock %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @product %> |
<%= link_to 'Back', products_path %>
