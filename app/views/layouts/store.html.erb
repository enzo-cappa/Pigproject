<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
          "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd" >
<html>
  <head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8"></meta>
    <title><%= I18n.t('layout.title') %> </title>
    <%= stylesheet_link_tag "depot" , :media => "all" %>
    <%= javascript_include_tag :defaults %>
    <%= stylesheet_link_tag 'default' %>
    <%= stylesheet_link_tag 'alert' %>
    <%= stylesheet_link_tag 'alphacube' %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag 'window'%>
    <%= javascript_include_tag 'tooltip'%>
  </head>
  <body id="store">
    <% form_tag '', :method => 'GET', :class => 'locale' do %>
    <%= select_tag 'locale', options_for_select(LANGUAGES, I18n.locale), :onchange => 'this.form.submit()' %>
    <%= submit_tag 'submit' %>
    <%= javascript_tag "$$('.locale input').each(Element.hide)" %>
  <% end %>

  <div id="banner">
    <%= image_tag("logo.png" ) %>
    <%= @page_title || I18n.t('layout.title') %>
  </div>
  <div id="columns">
    <div id="side">
      <% if @cart %>
        <% hidden_div_if(@cart.items.empty?, :id => "cart" ) do %>
          <%= render(:partial => "cart" , :object => @cart) %>
        <% end %>
      <% end %>
      <br />
      <a href="/"><%= I18n.t 'layout.side.home' %></a><br />
      <a href="/"><%= I18n.t 'layout.side.questions' %></a><br />
      <%= link_to I18n.t('layout.side.news'), :controller => 'news', :action => 'index' %><br />
      <a href="/"><%= I18n.t 'layout.side.contact' %></a><br />
      <%= link_to 'Top Buyers', :controller => 'info', :action => 'top_buyers' %><br />

      <br />
      <% if session[:user_id] %>
        <%= link_to 'Account resume', :controller => 'store', :action => 'amount_for_user' %><br />
      <% end %>
      <% if session[:admin_id] %>
        <br />
        <%= link_to 'Orders', :controller => 'orders' %><br />
        <%= link_to  I18n.t('products.name'), :controller => 'products' %><br />
        <%= link_to 'Users', :controller => 'users' %><br />
        <%= link_to 'Administrators', :controller => 'administrators' %> <br />
        <%= link_to 'Deposits', :controller => 'deposits' %> <br />
        <%= link_to 'Delinquents', :controller => 'deposits', :action => 'amount_by_user' %>
        <br />
      <% end %>
      <% if session[:admin_id] or session[:user_id] %>
        <br />
        <%= link_to 'Logout', :controller => 'admin', :action => 'logout' %>
      <% else %>
        <br />
        <%= link_to 'Login', :controller => 'admin', :action => 'login' %>
      <% end %>
    </div>
    <div id="main">
      <% if flash[:notice] -%>
        <div id="notice"><%= flash[:notice] %></div>
      <% end -%>
      <%= yield :layout %>
    </div>
  </div>
</body>
</html>


